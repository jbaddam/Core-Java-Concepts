package com.bootcamp.corejava.introduction.lab4;


/**
 * @author Jagan Reddy
 * This class has functionality to print the employee information
 */
public class DemoRefactorMethodBefore {

	/*
	 * This method prints the employee information
	 * based on the values passed at the time of method calling
	 */
	static void empInfo(String name, String city, String state) {

		System.out.println("Hello, My name is " + name);
		System.out.println("I live in " + city + "," + state);
		System.out.println("I am a java instructor");
		System.out.println("I work for Nivtek\n\n");
	}

	/*
	 * This method takes 2 integer variables and returns their addition
	 */
	static int add(int a, int b) {
		
		return a + b;
	}

	public static void main(String[] args) {
		
		empInfo("Jagan reddy", "San Francisco", "CA");
		empInfo("Naveen", "Dallas", "TX");
		empInfo("Suneendra", "Philadelphia", "PA");
		
		System.out.println("Sum of 5 and 6 is :" + add(5, 6));
		
		System.out.println("Sum of 1526 and 36589 is :" + add(1526, 36589));

	}
}
